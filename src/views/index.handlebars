<main>
  <h2 class = "text-center">Index</h2>
  <div class="container border">
    {{#if products.length}}
    {{#each products}}

    <div class="d-flex justify-content-center align-items-center">
      <div class="text-center border border-info rounded my-3 py-2 px-3">
        <p>
          <b>{{title}}</b></br>
          <u>Descripcion:</u> {{description}}</br>
          <u> Precio:</u> {{price}}</br>
          <u>Categoria:</u> {{category}}</br>
          <u>Stock:</u> {{stock}}</br>
          <u>Code:</u> {{code}}</br>
        </p>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p>No se encontraron productos</p>
    {{/if}}
  </div>
</main>